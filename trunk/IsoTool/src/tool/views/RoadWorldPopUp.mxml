<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" close="titlewindow1_closeHandler(event)"
			   xmlns:mx="library://ns.adobe.com/flex/mx" width="1000" height="700">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;
			
			import tool.local.map.RoadWorld;
			import tool.local.vos.RoadResVO;
			
			public function show( name:String , roadResVO:RoadResVO ):void
			{
				var world:RoadWorld = new RoadWorld();
				container.addChild( world );
				world.showRoad( name , roadResVO);
			}
			
			protected function titlewindow1_closeHandler(event:CloseEvent):void
			{
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	
	<s:BorderContainer width="100%" height="100%" mouseChildren="false" backgroundColor="#49842D" 
			 mouseEnabled="false">
		<mx:UIComponent id="container" />
	</s:BorderContainer>
</s:TitleWindow>
